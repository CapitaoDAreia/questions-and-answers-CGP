<!DOCTYPE html>
<html lang="en">
  <%- include ('partials/header.ejs');%>
  <body>
    <%- include ('partials/navbar.ejs');%>
    <div class="container custom-spacing-asking-container">
      <div class="card mt-3">
        <div class="card-header bg-light text-dark border-secondary">
          <h2 class="mb-4">FAZER PERGUNTA</h2>
        </div>
        <div class="card-body bg-light text-dark">
          <form method="POST" action="/savequestion">
            <label for="questionTitle">Título da Pergunta</label>
            <input
              type="text"
              name="questionTitle"
              id="question-title"
              class="form-control mb-5"
            />
            <label for="questionDescription">Descrição da Pergunta</label>
            <textarea
              name="questionDescription"
              id="question-description"
              cols="30"
              rows="10"
              class="form-control"
            >
            </textarea>
            <button class="btn btn-dark mt-2">Fazer Pergunta</button>
          </form>
        </div>
      </div>
    </div>
  </body>
  <%- include ('partials/scripts.ejs');%>
</html>
